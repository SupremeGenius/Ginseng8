@model InsertItemView

<div class="mb-3">
    <a class="btn btn-sm btn-light insert-item" data-target="insert-item-area-@Model.Context">Add Item</a>
    <div style="display:none" id="insert-item-area-@Model.Context">
        <form method="post">
            <div class="form-row">                
                <div class="col-2">
                    <span>some dropdown here</span>
                </div>

                <div class="col-8">
                    <input type="text" name="Title" required="required" placeholder="item title" class="form-control" />
                </div>

                <div class="col-2">
                    <button class="btn btn-dark" type="submit">Add</button>
                    <button class="btn btn-light btn-item-detail" type="button" data-target="item-detail-@Model.Context">Add Detail</button>
                </div>
            </div>
            <div class="form-row">
                <div class="col-12" style="display:none" id="item-detail-@Model.Context">
                    <textarea name="HtmlBody" class="htmlEditor"></textarea>
                </div>
            </div>
        </form>
    </div>
</div>
