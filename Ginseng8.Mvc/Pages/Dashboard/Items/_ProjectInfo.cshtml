@model ProjectInfoResult

<span class="text-muted small mr-2">
    @Model.OpenWorkItems work items | 
    @if (Model.EstimateHours.HasValue)
    {
        @(Model.EstimateHours)<text> hrs | </text>
    }    
    @Html.FormatValue(Model.PercentComplete, "{0:P0}") complete
</span>

@if (Model.HasImpediment)
{
    <span>
        <i class="@Comment.ImpedimentIcon" style="color:darkred" title="Has impediment"></i>
    </span>
}

<br/><meter value="@Model.PercentComplete" max="1"></meter>
